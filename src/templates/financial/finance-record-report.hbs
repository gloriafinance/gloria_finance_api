<html lang="{{i18nLang}}">
<head>
  <meta charset="UTF-8" />
  <title>{{t "finance_record_report.title"}}</title>
  <style>
    :root {
      color-scheme: light;
    }

    body {
      font-family: "Arial", sans-serif;
      margin: 24px;
      color: #1f2933;
    }

    h1 {
      font-size: 22px;
      margin-bottom: 4px;
      color: #20364b;
    }

    .meta {
      margin-bottom: 24px;
      font-size: 12px;
    }

    .meta p {
      margin: 2px 0;
    }

    .summary-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 12px;
      margin-bottom: 28px;
    }

    .summary-card {
      border: 1px solid #d1d5db;
      border-radius: 8px;
      padding: 12px;
      background: #f8fafc;
    }

    .summary-card .label {
      display: block;
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
      margin-bottom: 4px;
    }

    .summary-card .value {
      display: block;
      font-size: 16px;
      font-weight: 600;
      color: #0f172a;
    }

    .summary-card .value.negative {
      color: #b42318;
    }

      .summary-card .caption {
        display: block;
        font-size: 11px;
        color: #475569;
        margin-top: 4px;
      }

      .summary-group {
        margin-bottom: 24px;
      }

      .summary-title {
        font-size: 12px;
        color: #334155;
        margin-bottom: 10px;
      }

      .tooltip {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 16px;
        height: 16px;
        margin-left: 6px;
        border-radius: 999px;
        border: 1px solid #94a3b8;
        color: #475569;
        font-size: 10px;
        line-height: 1;
        cursor: help;
      }


    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 12px;
    }

    th,
    td {
      border: 1px solid #e2e8f0;
      padding: 8px;
      text-align: left;
    }

    th {
      background: #e2e8f0;
      text-transform: uppercase;
      font-size: 11px;
      color: #334155;
    }

    tbody tr:nth-child(even) {
      background: #f8fafc;
    }

    .number-cell {
      text-align: right;
      font-feature-settings: "tnum";
    }

    .empty {
      text-align: center;
      padding: 24px;
      color: #6b7280;
    }
  </style>
</head>
<body>
<h1>{{t "finance_record_report.title"}}</h1>

<div class="meta">
  <p>
    <strong>{{t "finance_record_report.church_label"}}</strong>
    {{#if church}}
      {{church}}
    {{else}}
      {{t "finance_record_report.church_not_informed"}}
    {{/if}}
  </p>
  <p><strong>{{t "finance_record_report.generated_at"}}</strong> {{formatDate generatedAt}}</p>
  {{#if filters.startDate}}
    <p>
      <strong>{{t "finance_record_report.period_label"}}</strong>
      {{formatDate filters.startDate}}
      {{#if filters.endDate}}
        -
        {{formatDate filters.endDate}}
      {{/if}}
    </p>
  {{/if}}
  {{#if filters.conceptType}}
    <p>
      <strong>{{t "finance_record_report.filtered_type"}}</strong>
      {{filters.conceptType}}
    </p>
  {{/if}}
</div>

    {{#each summaryBySymbol}}
      <div class="summary-group">
        <div class="summary-title">
          <strong>{{t "finance_record_report.symbol_label"}}</strong>
          {{#if symbol}}
            {{symbol}}
          {{else}}
            {{t "finance_record_report.symbol_not_informed"}}
          {{/if}}
        </div>
        <div class="summary-grid">
          {{#each totalsByType}}
            <div class="summary-card">
              <span class="label">
                {{t typeLabelKey}}
                {{#if isReversal}}
                  <span
                    class="tooltip"
                    title="{{t "finance_record_report.reversal_tooltip_title"}} - {{t "finance_record_report.reversal_tooltip_text"}}"
                  >i</span>
                {{/if}}
              </span>
              <span class="value {{#if isExpense}}negative{{/if}}">
                {{signedTotalFormatted}}
              </span>
              <span class="caption">{{count}} {{t movementLabelKey}}</span>
            </div>
          {{/each}}
          <div class="summary-card">
            <span class="label">{{t "finance_record_report.net_result"}}</span>
            <span class="value {{#if (isNegative netResult)}}negative{{/if}}">
              {{netResultFormatted}}
            </span>
            <span class="caption">{{totalRecords}} {{t totalRecordsLabelKey}}</span>
          </div>
        </div>
      </div>
    {{/each}}

<table>
  <thead>
  <tr>
    <th>{{t "finance_record_report.table.date"}}</th>
    <th>{{t "finance_record_report.table.description"}}</th>
    <th>{{t "finance_record_report.table.type"}}</th>
    <th>{{t "finance_record_report.table.concept"}}</th>
    <th>{{t "finance_record_report.table.availability_account"}}</th>
    <th>{{t "finance_record_report.table.cost_center"}}</th>
    <th>{{t "finance_record_report.table.amount"}}</th>
  </tr>
  </thead>
  <tbody>
  {{#if records.length}}
    {{#each records}}
      <tr>
        <td>{{formatDate date}}</td>
        <td>{{description}}</td>
        <td>{{#if typeLabelKey}}{{t typeLabelKey}}{{else}}{{type}}{{/if}}</td>
        <td>{{conceptName}}</td>
        <td>{{availabilityAccount}}</td>
        <td>{{costCenter}}</td>
        <td class="number-cell">{{amountFormatted}}</td>
      </tr>
    {{/each}}
  {{else}}
    <tr>
      <td class="empty" colspan="9">
        {{t "finance_record_report.empty"}}
      </td>
    </tr>
  {{/if}}
  </tbody>
</table>
</body>
</html>
