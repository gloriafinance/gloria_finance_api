{
  "name": "church_financial_api",
  "version": "2.2.2",
  "description": "API Church Financial System",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/app.ts",
    "test": "jest --forceExit --runInBand --detectOpenHandles",
    "start:prod": "node -r tsconfig-paths/register dist/app.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias && npm run copy-static-assets",
    "format": "prettier --write \"src/**/*.{ts,hbs}\" ",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "copy-static-assets": "ts-node src/copyStaticAssets.ts"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "author": "angel bejarano / angel.bejarano@jaspesoft.com",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jaspesoft/church_financial_api.git"
  },
  "license": "ISC",
  "dependencies": {
    "@abejarano/ts-express-server": "^1.5.3",
    "@abejarano/ts-mongodb-criteria": "^1.6.2",
    "@bull-board/express": "^6.16.2",
    "@fast-csv/parse": "^5.0.5",
    "@google-cloud/logging": "^11.2.1",
    "@google-cloud/pubsub": "^5.2.0",
    "@google-cloud/storage": "^7.17.3",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express-basic-auth": "^1.2.1",
    "firebase-admin": "^13.6.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "mongodb": "^7.0.0",
    "node-cron": "^4.2.1",
    "node-input-validator": "^4.5.1",
    "nodemailer": "^7.0.11",
    "nodemailer-express-handlebars": "^7.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "puppeteer": "^24.30.0",
    "reflect-metadata": "^0.2.2",
    "shelljs": "^0.10.0",
    "socket.io": "^4.8.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/express-fileupload": "^1.5.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer-express-handlebars": "^4.0.6",
    "@types/reflect-metadata": "^0.0.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "node_modules/",
      "dist/",
      "*.log",
      ".git/",
      ".idea/",
      "*.tmp",
      "*.temp"
    ]
  }
}